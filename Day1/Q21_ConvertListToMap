import java.util.stream.*;
import java.util.*;
class ConvertListToMap {
    public static void main(String[] args) {
        
     List<String> list = List.of("cat","tiger","lion");
     
    Map<String,Integer> result=
    list.stream()
    .collect(Collectors.toMap(
        word -> word,
        word -> word.length()));
        System.out.println(result);
    }
}
